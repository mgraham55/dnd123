@model List<dnd123.Models.Character.Character>


<p>
    <a asp-controller="Create" asp-action="Add">
        <span style="color: white; background-color: black; border: none; padding: 12px 16px; cursor: pointer;">
            <i class="fas fa-plus-circle fa-lg"></i>
        </span>
    </a>
    <a asp-controller="Create" asp-action="Delete">
        <span style="color: white; background-color: black; border: none; padding: 12px 16px; cursor: pointer;">
            <i class="far fa-trash-alt fa-lg"></i>
        </span>
    </a>
</p>

@if (Model.Count == 0)
{
    <p>No Characters yet!</p>
}
else
{
    <table class="styled-table">
        <thead>
            <tr>
                <th>
                    Id
                </th>
                <th>
                    Name
                </th>
                <th>
                    Bio
                </th>
                <th>
                    Race
                </th>
                <th>
                    Class
                </th>
                <th>
                    Abilities
                </th>
            </tr>
        </thead>
        @foreach (var catr in Model)
        {
            <tbody>
                <tr>
                    <td>@catr.Id</td>
                    <td>@catr.Name</td>
                    <td>@catr.Bio</td>
                    <td>@catr.Race</td>
                    <td>@catr.CharacterClass</td>
                    <td>@catr.CharacterAbility</td>
                </tr>
            </tbody>
        }
    </table>
}
